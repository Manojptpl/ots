                    $("#v_For").html(data[0].For);
                    $("#v_Type").html(data[0].Type);
                    $("#v_RuleName").html(data[0].RuleName);
                    $("#v_StartDate").html(data[0].StartDate);

                    $("#v_EndDate").html(data[0].EndDate);
                    $("#v_Status").html(data[0].Status);

                    var data_formula = data[0].condition
                    if (data_formula != null) {
                        $("#tbl_all_condition tbody").empty();
                        for (var i = 0; i < data_formula.length; i++) {
                            var markup = "";
                            markup += "<tr>";
                            markup += "<td  style='display: none;' ></td>";

                            markup += "<td style='width: 40% ;'>" + data_formula[i].formula + "</td>";

