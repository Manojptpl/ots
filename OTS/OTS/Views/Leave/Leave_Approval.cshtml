<script>
    $(document).ready(function () {
        $('ul.list-unstyled  li a[href$="' + "/Leave_Approval" + '"]').addClass('active');
        $("#fromfirsthalf").prop("disabled", true);
        $("#fromsecondhalf").prop("disabled", true);
        $("#tofirsthalf").prop("disabled", true);
