@model IEnumerable<OTS.Models.MastersModel>

<script type="text/javascript">
           $(document).ready(function () {
               $('ul.list-unstyled  li a[href$="' + "/Holiday_List" + '"]').addClass('active');
               $('#datatableList').DataTable({
                   "columnDefs": [
                       { "targets": [3], "orderable": false }
                   ],
                   "language": {
                       "search": "",
                       "searchPlaceholder": "Search"
                   }
               });
           });
</script>
<style type="text/css">
    #datatableList_filter input {
        width: 157px;
    }
</style>
<div class="row">
    <div class="col-sm-6">
        <h4 class="page-title">Holiday List</h4>
    </div>
    <div class="col-sm-4 text-right m-b-30">

    </div>
    <div class="col-sm-2 text-right m-b-30">

    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped table-responsive custom-table m-b-0" id="datatableList" style="font-size:11px;">
            <thead>
                <tr>
                    <th>Holiday Name</th>
                    <th>Holiday Date</th>
                    <th>Holiday Type</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Holiday_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Show_HolidayDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Holiday_Type)
                        </td>
                        <td>
                            @if (item.Show_Status == "Active")
                            {
                                <label class="badge bg-success">@Html.DisplayFor(modelItem => item.Show_Status)</label>
                            }
                            else
                            {
                                <label class="badge bg-warning">@Html.DisplayFor(modelItem => item.Show_Status)</label>
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
